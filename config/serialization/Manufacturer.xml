<?xml version="1.0" ?>
<serializer xmlns="http://symfony.com/schema/dic/serializer-mapping"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://symfony.com/schema/dic/serializer-mapping https://symfony.com/schema/dic/serializer-mapping/serializer-mapping-1.0.xsd"
>
    <class name="App\Entity\Manufacturer\Manufacturer">
        <attribute name="id">
            <group>admin:manufacturers:read</group>
            <group>admin:manufacturer:read</group>
        </attribute>
        <attribute name="name">
            <group>admin:manufacturers:read</group>
            <group>admin:manufacturer:read</group>
            <group>shop:manufacturers:read</group>
            <group>shop:manufacturer:read</group>
            <group>admin:manufacturer:create</group>
            <group>admin:manufacturer:update</group>
        </attribute>
        <attribute name="code">
            <group>admin:manufacturers:read</group>
            <group>admin:manufacturer:read</group>
            <group>admin:manufacturer:create</group>
            <group>admin:manufacturer:update</group>
        </attribute>
        <attribute name="createdAt">
            <group>admin:manufacturer:read</group>
            <group>shop:manufacturer:read</group>
        </attribute>
        <attribute name="updatedAt">
            <group>admin:manufacturer:read</group>
        </attribute>
    </class>
</serializer>
