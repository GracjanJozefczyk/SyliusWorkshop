<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                 http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="App\Entity\Product\Product" table="sylius_product">
        <many-to-one field="manufacturer" target-entity="App\Entity\Manufacturer\Manufacturer" inversed-by="products">
            <join-column name="manufacturer_id" referenced-column-name="id" nullable="true" on-delete="SET NULL" />
        </many-to-one>
    </entity>
</doctrine-mapping>
